<body>

  <!-- mian-content -->
  <div class="main-banner" id="home">
    <!-- header -->
    <header class="header">
      <div class="container-fluid px-lg-5">
        <!-- nav -->
        <nav class="py-4">
          <div id="logo">
            <h1> <a href="/"><span class="fa fa-bold" aria-hidden="true"></span>ootie</a></h1>
          </div>

          <label for="drop" class="toggle">Menu</label>
          <input type="checkbox" id="drop" />
          <ul class="menu mt-2">
            <li class="active"><a href="/">Home</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/blog">Blog</a></li>
            <li><a href="/contact">Contact</a></li>
            <li><a href="/user">Sign In</a></li>
          </ul>
        </nav>
        <!-- //nav -->
      </div>
    </header>
    <!-- //header -->

    <body>
      <section>

        <% if(error=='email' || error=='password') { %>
        <div class="container active">
          <% }else{ %>
          <div class="container">
            <% } %>
            <div class="user signinBx">
              <div class="imgBx"><img src="https://images.unsplash.com/photo-1576859958081-27de5c70262a?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=687&q=80" /></div>
              <div class="formBx">
                <form action="user/signin" method="POST">
                  <h2>Sign In</h2>
                  <input type="email" name="email" placeholder="Email" required />
                  <input type="password" name="password" placeholder="Password" required />
                  <input type="submit" name="" value="Login" />
                  <p class="text-danger">
                    <% if(error=='loginE'){ %>
                    <%= 'This email does not exists.' %>
                    <% }else if(error=='loginP'){%>
                    <%= 'incorrect password.' %>
                    <% }else{ %>
                    <%= '' %>
                    <% } %>
                  </p>
                  <p class="signup">
                    Don't have an account ?<a href="#" onclick="toggleForm();">
                      Sign Up
                    </a>
                  </p>
                </form>
              </div>
            </div>
            <div class="user signupBx">
              <div class="formBx">
                <form action="user/signup" method="POST">
                  <h2>Create an Account</h2>
                  <input type="text" name="username" placeholder="Username" required />
                  <input type="email" name="email" placeholder="Email" required />
                  <input type="password" name="password" placeholder="Create Password" minlength="6" required />
                  <input type="password" name="password2" placeholder="Confirm Password" minlength="6" required />
                  <input type="submit" name="" value="Sign Up" />
                  <p class="text-danger">
                    <% if(error=='email'){ %>
                    <%= 'This email already exists.' %>
                    <% }else if(error=='password'){%>
                    <%= 'Please enter the same password.' %>
                    <% }else{ %>
                    <%= '' %>
                    <% } %>
                  </p>
                  <p class="signup">
                    Already have an account ?
                    <a href="#" onclick="toggleForm();"> Sign In </a>
                  </p>
                </form>
              </div>
              <div class="imgBx"><img src="https://images.unsplash.com/photo-1628972799193-1a6be77e183e?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=735&q=80" /></div>
            </div>
          </div>
      </section>

      <script>
        function toggleForm() {
          var container = document.querySelector(".container");
          container.classList.toggle("active");
        }
      </script>
    </body>